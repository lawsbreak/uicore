<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin">

        <com.antking.library.uicore.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"
            android:text="Body Size - 14sp"
            style="@style/Example.Text.Regular"/>
        <com.antking.library.uicore.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is helvetica-neue-ultra-light"
            style="@style/Example.Text.UltraLight.Body"/>

        <com.antking.library.uicore.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is helvetica-neue-light"
            style="@style/Example.Text.Light.Body"/>

        <com.antking.library.uicore.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is helvetica-neue-regular"
            style="@style/Example.Text.Regular.Body"/>

        <com.antking.library.uicore.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is helvetica-neue-medium"
            style="@style/Example.Text.Medium.Body"/>

        <com.antking.library.uicore.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is helvetica-neue-Bold"
            style="@style/Example.Text.Bold.Body"/>

        <com.antking.library.uicore.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_lorem_ipsum"
            app:autoFit="true"
            app:imageHeight="100dp"
            app:imageWidth="100dp"
            android:maxLines="30"
            android:ellipsize="none"
        style="@style/Example.Text.Regular.Body"/>

    </LinearLayout>

</ScrollView>