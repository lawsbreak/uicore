<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom TextView Attributes -->
    <declare-styleable name="CustomTextView">
        <attr name="font" format="string"/>
        <attr name="autoFit" format="boolean"/>
        <attr name="maxLineOfShortShow" format="integer"/>
        <attr name="imageWidth" format="dimension"/>
        <attr name="imageHeight" format="dimension"/>
    </declare-styleable>

    <!-- MHorizontal ScrollView-->
    <declare-styleable name="SyncHorizontalScrollView">
        <attr name="view_partner" format="reference"/>
    </declare-styleable>
    <!-- BlurView-->
    <declare-styleable name="BlurView">
        <attr name="view_source" format="integer"/>
        <attr name="shape" format="enum">
            <enum name="rectangle" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
        <attr name="corner_radius" format="dimension"/>
        <attr name="blur_radius" format="integer"/>
        <attr name="over_color" format="color"/>
    </declare-styleable>

    <!-- Custom CalendarView Attributes -->
    <declare-styleable name="CustomCalendarView">

        <!-- Header Attributes -->
        <attr name="header_height" format="dimension"/>

        <attr name="header_button_border_padding" format="dimension"/>
        <attr name="header_button_size" format="dimension"/>
        <attr name="header_button_height" format="dimension"/>
        <attr name="header_button_width" format="dimension"/>

        <attr name="header_button_left_border_padding" format="dimension"/>
        <attr name="header_button_left_border_padding_left" format="dimension"/>
        <attr name="header_button_left_border_padding_top" format="dimension"/>
        <attr name="header_button_left_border_padding_right" format="dimension"/>
        <attr name="header_button_left_border_padding_bottom" format="dimension"/>
        <attr name="header_button_left_size" format="dimension"/>
        <attr name="header_button_left_height" format="dimension"/>
        <attr name="header_button_left_width" format="dimension"/>

        <attr name="header_button_right_border_padding" format="dimension"/>
        <attr name="header_button_right_border_padding_left" format="dimension"/>
        <attr name="header_button_right_border_padding_top" format="dimension"/>
        <attr name="header_button_right_border_padding_right" format="dimension"/>
        <attr name="header_button_right_border_padding_bottom" format="dimension"/>
        <attr name="header_button_right_size" format="dimension"/>
        <attr name="header_button_right_height" format="dimension"/>
        <attr name="header_button_right_width" format="dimension"/>

        <attr name="header_button_left_drawable" format="reference"/>
        <attr name="header_button_right_drawable" format="reference"/>

        <attr name="title_style" format="reference"/>

        <!-- Body Attributes -->
        <attr name="vertical_padding" format="dimension"/>
        <attr name="horizontal_padding" format="dimension"/>
    </declare-styleable>
</resources>